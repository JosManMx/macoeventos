mixin carousel-home(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  div(class=spec.__class)&attributes(attributes)
    .carousel.carousel-slider
        a.carousel-item(href="#one!"): img(src="images/maco-producciones-slider-01.jpg", alt="" href="#one!")
        a.carousel-item(href="#two!"): img(src="images/maco-producciones-slider-02.jpg", alt="" href="#two!")
        a.carousel-item(href="#three!"): img(src="images/maco-producciones-slider-03.jpg", alt="" href="#three!")
